<%= render "shared/errors", object: @user %>

<div class="flex justify-center ">
<div class="w-full sm:w-3/4 md:w-1/2 lg:w-1/3 xl:w-1/4 px-4 border border-[#ebedf2] dark:border-[#191e3a] rounded-md p-4 mb-5 bg-white dark:bg-[#0e1726]">

<%= form_with model: resource, url: profil_path, local: true, data: { turbo: false }, html: { method: :put } do |f| %>
  <h6 class="text-lg font-bold mb-5">Informácie o vašom účte</h6>
  <div class="flex flex-col sm:flex-row">

    <div class="flex-1  grid-cols-1  gap-5">

    
                  
        <div href="javascript:;" class="flex items-center mt-5 gap-2">
     
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 shrink-0">
             <path opacity="0.5" d="M2 12C2 8.22876 2 6.34315 3.17157 5.17157C4.34315 4 6.22876 4 10 4H14C17.7712 4 19.6569 4 20.8284 5.17157C22 6.34315 22 8.22876 22 12C22 15.7712 22 17.6569 20.8284 18.8284C19.6569 20 17.7712 20 14 20H10C6.22876 20 4.34315 20 3.17157 18.8284C2 17.6569 2 15.7712 2 12Z" stroke="currentColor" stroke-width="1.5"></path>
            <path d="M6 8L8.1589 9.79908C9.99553 11.3296 10.9139 12.0949 12 12.0949C13.0861 12.0949 14.0045 11.3296 15.8411 9.79908L18 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
            </svg>
            <h2>
          <span class="text-primary truncate"><%=  resource.email %></span></div>
                    </h2>

      <div class="mt-5">
        <%= f.label :name, "Vaše meno" %>
        <%= f.text_field :name, placeholder: "Vaše meno", class: "form-input", autofocus: true %>
      </div>


      <div class="mt-5">
        <%= f.label :current_password, "Aktuálne heslo" %>
        <%= f.password_field :current_password, placeholder: "Aktuálne heslo", class: "form-input" %>
      </div>

      <div class="mt-5">
        <%= f.label :password, "Nové heslo" %>
        <%= f.password_field :password, placeholder: "Nové heslo", class: "form-input", autocomplete: "new-password" %>
      </div>

      <div class="mt-5">
        <%= f.label :password_confirmation, "Potvrdit nové heslo" %>
        <%= f.password_field :password_confirmation, placeholder: "Potvrdit nové heslo", class: "form-input", autocomplete: "new-password" %>
      </div>

      <div class="sm:col-span-2 mt-4">
        <%= f.submit "Uložiť", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>